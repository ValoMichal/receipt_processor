<Page x:Class="Blockovator.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Blockovator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <DockPanel FocusManager.FocusedElement="{Binding ElementName=qrkody}">
        <TextBlock DockPanel.Dock="Top" Text=" Vlozte QR kody:"/>
        <TextBox Margin="5" x:Name="qrkody" TextChanged="saveCode" AcceptsReturn="True"/>
    </DockPanel>
</Page>
