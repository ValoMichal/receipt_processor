<Window x:Class="Blockovator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blockovator"
        mc:Ignorable="d"
        Height="450" Width="800">
    <DockPanel>
        <DockPanel.Background>
            <ImageBrush ImageSource="/Blockovator;component/demo.png"/>
        </DockPanel.Background>
        <UniformGrid Columns="3" DockPanel.Dock="Top" >
            <Button Content="Modul" Click="BtnClickPage1" x:Name="Button1" Background="Green"/>
            <Button Content="Sken" Click="BtnClickPage2" x:Name="Button2" Background="Gray"/>
            <Button Content="Spracovat" Click="BtnClickPage3" x:Name="Button3" Background="Gray"/>
        </UniformGrid>
        <DockPanel DockPanel.Dock="Bottom">
            <Button Content="Path" Click="path" x:Name="Button" DockPanel.Dock="Bottom"/>
            <Frame x:Name="Main" NavigationUIVisibility="Hidden" DockPanel.Dock="Top"/>
        </DockPanel>
    </DockPanel>
</Window>